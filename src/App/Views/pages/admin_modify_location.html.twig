{% extends "templates/header.html.twig" %}

{% block title %}Troc Mon Toit{% endblock %}
    
{% block css %}<link rel="stylesheet" href="public/css/style.css">{% endblock %}

{% set user_connected = "Profile" %}
{% set link = "profile" %}

{% block body %}
    <body>
        <ul>
        <form method="post" class="form_create_logement" action="/modify_location_finish">
            <input type="hidden" name="id" value="{{ renting.id }}">
            <p>Prix : </p>
            <input name="price" value="{{ renting.price }}">
            <p>Adresse : </p>
            <input name="address" value="{{ renting.address }}">
            <p>Description : </p>
            <input name="description" value="{{ renting.description }}">
            <p>Nom : </p>
            <input name="name" value="{{ renting.name }}">
            <div class="types">
                <select name="type">
                    {% for type in types %}
                        {% if type.id == renting.id_type %}
                            <option value="{{ type.id }}" selected>{{ type.name }}</option>
                        {% else %}
                            <option value="{{ type.id }}">{{ type.name }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
            </div>
            <p>Equipments : </p>
            <div class="equipments">
            {% for equipment in equipments %}
                {% if equipment.id == renting.id_equipment %}
                    <input type="checkbox" class="checkbox_create_logement" name="equipment" value="{{ equipment.id }}" selected>{{ equipment.name }}</input>
                {% else %}
                    <input type="checkbox" class="checkbox_create_logement" name="equipment" value="{{ equipment.id }}">{{ equipment.name }}</input>
                {% endif %}
            {% endfor %}
            </div>
            <p>Services : </p>
            <div class="services">
            {% for service in services %}
                {% if service.id == renting.id_service %}
                    <input type="checkbox" class="checkbox_create_logement" name="service" value="{{ service.id }}" selected>{{ service.name }}</input>
                {% else %}
                    <input type="checkbox" class="checkbox_create_logement" name="service" value="{{ service.id }}">{{ service.name }}</input>
                {% endif %}
            {% endfor %}
            </div>
            <p>Photos : </p>
            <input name="photo" value="{{ renting.photo }}"> <br /><br />
            <input type="submit" class="submit_create_logement" value="Envoyer" />
        </form>
        </ul>
    </body>
{% endblock %}