{% extends "templates/header.html.twig" %}

{% block title %}Troc Mon Toit{% endblock %}
    
{% block css %}<link rel="stylesheet" href="public/css/style.css">{% endblock %}

{% if user_connect %}
    {% set user_connected = "Profile" %}
    {% set link = "profile" %}
{% else %}
    {% set user_connected = "Se connecter" %}
    {% set link = "login" %}
{% endif %}

{% block body %}
    <body>
        <ul>
        {% for renting in rentings %}
            <div class="renting">
            <h2> {{ renting.address }}</h2>
            <p> Prix : {{ renting.price }}€</p>
            <p> Type : {{ renting.type}}</p>
            <p> Description : {{ renting.description }}</p>
            <p> Nom : {{ renting.name }}</p>
            {% for equipment in equipments %}
                {% if equipment.id == renting.id_equipment %}
                    <p> Equipment : {{ equipment.name }}</p>
                {% endif %}
            {% endfor %}
            {% for service in services %}
                {% if service.id == renting.id_service %}
                    <p> Service : {{ service.name }}</p>
                {% endif %}
            {% endfor %} 
            <li><a href="{{ renting.id }}">Détails</a></li>
            </div>
        {% endfor %}
        </ul>
    </body>
{% endblock %}