{% extends "templates/header.html.twig" %}

{% block title %}Troc Mon Toit{% endblock %}
    
{% block css %}<link rel="stylesheet" href="public/css/style.css">{% endblock %}

{% if user_connect %}
    {% set user_connected = "Profile" %}
    {% set link = "profile" %}
{% else %}
    {% set user_connected = "Se connecter" %}
    {% set link = "login" %}
{% endif %}

{% block body %}
    <body>
        <div class="filters-column">
            <h3>Filtres</h3>
            <form action="/" method="post">
                <div class="filter">
                    <label>Prix :</label>
                    <p>De 
                        <input type="number" name="min_price" min="0" value="0" />€ à
                        <input type="number" name="max_price" min="0" value="0" />€
                        <input type="submit" class="submit_button" name="price" value="Chercher" />
                    </p>
                    <p class="error">{{ error }}</p>
                    <label>Type de logement :</label>
                    <select name="id_type">
                        <option value="all">Tous</option>
                        {% for type in types %}
                            <option value="{{ type.id }}">{{ type.name }}</option>
                        {% endfor %}
                    </select>
                    <input type="submit" class="submit_button" name="type" value="Chercher" />

                    <label>Equipements :</label>
                    <select name="id_equipment">
                        <option value="all">Tous</option>
                        {% for equipment in equipments %}
                            <option value="{{ equipment.id }}">{{ equipment.name }}</option>
                        {% endfor %}
                    </select>
                    <input type="submit" class="submit_button" name="equipment" value="Chercher" />
                    <label>Services :</label>
                    <select name="id_service">
                        <option value="all">Tous</option>
                        {% for service in services %}
                            <option value="{{ service.id }}">{{ service.name }}</option>
                        {% endfor %}
                    </select>
                    <input type="submit" class="submit_button" name="service" value="Chercher" />
                </div>
            </form>
        </div>
        <div class="main-content">
            <ul>
                {% for renting in rentings %}
                    <div class="rentings">
                        <h2>{{ renting.address }}</h2>
                        <img src="data:image/jpeg;base64,{{ renting.encoded_picture }}" alt="image">
                        <p>{{ renting.price }}€ par nuit</p>
                        <p>{{ renting.type_name }}</p>
                        <li><a href="/renting/{{ renting.id }}">Détails</a></li>
                    </div>
                {% endfor %}
            </ul>
        </div>
    </body>
{% endblock %}